{
    "name": "hughcube/base",
    "description": "url",
    "license": "MIT",
    "authors": [
        {
            "name": "hugh.li",
            "email": "hugh.li@foxmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-ctype": "*"
    },
    "require-dev": {
        "ext-gmp": "*",
        "ext-bcmath": "*",
        "phpstan/phpstan": "*",
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "HughCube\\Base\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HughCube\\Base\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse -vvv",
        "check-style": "phpcs -p --standard=PSR2 src/ -v",
        "fix-style": "phpcbf -p --standard=PSR2 src/ -v"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
